<?xml version="1.0"?>
<object name="portal_actions">
 <action-provider name="portal_actions">
  <action title="Export Bibliography" action_id="exportBib"
     category="document_actions"
     condition_expr="object/@@isBibliographyExportable"
     url_expr="string:${object_url}/bibliography_exportForm" visible="True">
   <permission>View</permission>
  </action>
  <action title="Bibliography Search" action_id="bibliography_search"
     category="portal_tabs" condition_expr=""
     url_expr="string:${portal_url}/bibliography_search_form" visible="True">
   <permission>View</permission>
  </action>
 </action-provider>
</object>
